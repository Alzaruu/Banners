<Window x:Class="Banners5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banners5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="login" FontSize="35" Grid.Row="1" Margin="32,10,44,10"/>
        <TextBlock x:Name="text" Text="Логин" Grid.Row="0" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox x:Name="password" FontSize="35" Grid.Row="3" Margin="32,10,44,10"/>
        <TextBlock x:Name="text2" Text="Пароль" Grid.Row="2" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="Voiti" Content="Войти" FontSize="30" Grid.Row="4" Margin="52,10,44,10" Background="#FFDC5454" BorderBrush="#FF9E1E1E" Foreground="#FFA11B1B" Click="Voiti_Click"/>

    </Grid>
</Window>
